<?xml version="1.0" encoding="UTF-8"?>
<sync type="sftp">
  <!-- mandatory -->
  <option name="host" value="backup.example.com" />

  <!-- mandatory -->
  <option name="user" value="user.name" />

  <!-- optional, if private_key presented -->
  <option name="password" value="mysecret" />

  <!-- optional, if password presented -->
  <option name="private_key" value="somedir/id_rsa" />

  <!-- optional -->
  <option name="private_key_password" value="12345" />

  <!-- optional, default=none -->
  <option name="path" value="somedir/somesubdir" />
</sync>
