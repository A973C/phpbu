<?xml version="1.0" encoding="UTF-8"?>
<sync type="sftp">
  <!-- mandatory -->
  <option name="host" value="backup.example.com" />

  <!-- mandatory -->
  <option name="user" value="user.name" />

  <!-- optional, if key presented it is used as key password -->
  <option name="password" value="mysecret" />

  <!-- optional -->
  <option name="key" value="somedir/id_rsa" />

  <!-- optional, default=none -->
  <option name="path" value="somedir/somesubdir" />
</sync>
